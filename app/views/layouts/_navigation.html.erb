<div class="navbar navbar-fixed-top">

  <% flash.each do |name, msg| %>
    <div class="container">
      <div class="alert alert-<%= name == :notice ? "success" : "error" %>" data-alert="alert">
        <h4><%= msg %></h4>
      </div>
    </div>
  <% end %>

  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>

      <!-- Logo -->
        <%= link_to "RateMyRepo", root_path, :class => "brand" %>

      <!-- Right side nave items -->
        <div class="nav-collapse collapse">
          <ul class="nav pull-right">
            <% if signed_in? %>
              <li><%= link_to current_user.username, user_path(@current_user.username), title: "Profile" %></li>
              <li><%= link_to "Settings", settings_path, title: "View Settings" %></li>
              <li><%= link_to "Sign out", signout_path, title: "Sign out" %></li>
            <% else %>
              <li><%= link_to "Sign in", signin_path, title: "Sign in via Github" %></li>
            <% end %>
          </ul>
        </div>

    </div>
  </div>
</div>
