<!DOCTYPE html>
<html>
  <head>
    <%= render 'layouts/header' %>
  </head>
  <body>
    <%= render 'layouts/navigation' %>

    <% flash.each do |name, msg| %>
      <div class="container">
        <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
          <a class="close" data-dismiss="alert">Ã—</a>
          <%= msg %>
        </div>
      </div>
    <% end %>

    <%= yield %>

    <%= render 'layouts/footer' %>

  </body>
</html>
