<div class="review" id="review-<%= review.id %>">
  <hr />
  <% if current_user_owns review %>
    <%= link_to "x", review_path(review), method: :delete, remote: true, confirm: "Are you sure?", disable_with: "x", class: 'close' %>
  <% end %>
  <h4><%= review.user.username %></h4>
  <small>Posted <%= time_ago_in_words(review.updated_at) %> ago</small>
  <p><%= review.rating %></p>
  <p><%= review.comment %></p>
</div>
