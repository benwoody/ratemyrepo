<% title("#{@user.username}/#{@repo.name}") %>
<div class='jumbotron'>
  <div class='container'>
    <div class='repoinfo'>
      <div class='row'>
        <div class='span9 offset1'>
          <h2><%= @repo.name %></h2>
          <h5><%= @repo.description %></h5>
          <%= @repo.user.username %><br />
          <%= @repo.url %><br />
          Rating<br />
          First Commit Date<br />
          Last Commit Date<br />
          Number of Commits<br />
          Pull Requests(Open/Closed)<br />
          Issues(Open/Closed)<br />
          Stars<br />
          Forks<br />
        </div>
      </div>
    </div>
  </div>
</div>

<div class='container'>
  <div class='row'>
    <div class="span8 offset2">
      <% if current_user %>
        <h3>Rate this Repo<h3>
        <%= render :partial => 'reviews/edit', :locals => { :review => @new_review } %>
      <% else %>
        <h3>Sign in to Rate this Repo!<h3>
      <% end %>

      <h3>Reviews</h3>
      <%= render :partial => 'reviews/show', :collection => @reviews, :as => :review %>
    </div>
  </div>
</div>
